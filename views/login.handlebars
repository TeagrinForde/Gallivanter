<div class="row login">
  <form class="col s8 loginForm">
    <div class="row">
      <div class="input-field col s8">
        <textarea id="username" class="materialize-textarea"></textarea>
        <label for="username">Username</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s8">
        <textarea id="email" class="materialize-textarea"></textarea>
        <label for="email">Email</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s8">
        <textarea id="password" class="materialize-textarea"></textarea>
        <label for="password">Password</label>
        <button
          class="btn waves-effect waves-light"
          type="submit"
          name="action"
        >Login
          <i class="material-icons right">send</i>
        </button>
      </div>
    </div>
  </form>
</div>

<div class="row signup">
  <form class="col s8 signupForm">
    <div class="row">
      <div class="input-field col s8">
        <textarea id="usernameSignup" class="materialize-textarea"></textarea>
        <label for="usernameSignup">Username</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s8">
        <textarea id="emailSignup" class="materialize-textarea"></textarea>
        <label for="emailSignup">Email</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s8">
        <textarea id="passwordSignup" class="materialize-textarea"></textarea>
        <label for="passwordSignup">Password</label>
        <button
          class="btn waves-effect waves-light"
          type="submit"
          name="action"
        >Sign Up
          <i class="material-icons right">save</i>
        </button>
      </div>
    </div>
  </form>
</div>

<script src="/js/login.js"></script>