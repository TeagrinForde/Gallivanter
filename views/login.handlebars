<div class="col s6 login">
  <form class="loginForm">

    <div class="row">
      <div class="input-field col s8">
        <textarea id="emailLogin" class="materialize-textarea"></textarea>
        <label for="emailLogin">Email</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s8">
        <input type="password" id="passwordLogin" class="materialize-textarea"></textarea>
        <label for="passwordLogin">Password</label>
        <button
          class="btn waves-effect waves-light"
          type="submit"
          name="action"
        >Login
          <i class="material-icons right">send</i>
        </button>
      </div>
    </div>
  </form>
</div>

<div class="col s6 signup">
  <form class="signupForm">
    <div class="row">
      <div class="input-field col s8">
        <textarea id="usernameSignup" class="materialize-textarea"></textarea>
        <label for="usernameSignup">Username</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s8">
        <textarea id="emailSignup" class="materialize-textarea"></textarea>
        <label for="emailSignup">Email</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s8">
        <input type="password" id="passwordSignup" class="materialize-textarea"></textarea>
        <label for="passwordSignup">Password</label>
        <button
          class="btn waves-effect waves-light"
          type="submit"
          name="action"
        >Sign Up
          <i class="material-icons right">save</i>
        </button>
      </div>
    </div>
  </form>
</div>

<script src="/js/login.js"></script>